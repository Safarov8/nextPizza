generator client {
    provider = "prisma-client-js"
}


// Мы тут указываем, какой должен быть наш БД и куда он должен обратится

datasource db{
    provider = "postgresql"
    url = env("POSTGRES_URL") 
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

// Далее создаём таблтцы и таблица создаётся словом "model"
model User{
    // тут мы берём что в нащей таблице есть поля id потому что у каждого юзера должна быть своя уникальная id и это логично. Далее 
    // определяем какого типа должен быть наша поле а тут у нас числовое и надо написать его рядом с id слово Int (integer)
    // теперь укажем что это поле не только число, а уникальный иднтификатор путём того что пишем @id
    //Далее нам надл указать что каждый раз когда добавляется новый пользователь, то его id по умолчанию должен быть +1 от 
    //предыдущего (чтобы не  было совпадений) путём @default(autoincrement())
    // Мы могли бы сделать это вручную, но зачем, когда БД за нас это сделает
    id  Int  @id  @default(autoincrement())

    //Теперь сделаем по проще и создадим другие поля
    fullName    String 
    email       String
    password    String

    //далее Мы должны создать в таблице время когда был создан юзер
    //По умолчанию мы берем то что был создат прямо сейчас
    createdAt DateTime @default(now())
    //далее создадим поле который содержит информмацию, когда пользоваетль был обновлён
    updatedAt DateTime @updatedAt
}

// Создаём новую таблицу
model Product {
    id Int @id @default(autoincrement())

    name    String
    umageUrl String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}


